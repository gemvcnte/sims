datasource db {
  provider = "mongodb"
  url = "mongodb+srv://admin:<password>@clustertest.sluqtuk.mongodb.net/"
}

generator client {
  provider = "prisma-client-js"
}

model Student {
  id                     Int      @id @map("_id")
  registrationDate       String
  status                 String
  firstName              String
  lastName               String
  middleName             String
  gender                 String
  email                  String
  birthdate              String
  fatherName             String
  motherName             String
  guardianName           String
  guardianContactNumber  String
  applicationModel    ApplicationModel?

  @@map("studentCollection")
}



model ApplicationModel {
  id               Int      @id @map("_id")
  firstName        String
  lastName         String
  middleName       String
  extensionName    String?
  birthdate        DateTime
  gender           String
  currentAddress   String
  // religion      String
  // permanentAddress String
  email            String
  //parentguardian
  parentFirstName  String
  parentLastName   String
  contactNumber    String
  //acad info
  lrn              Int
  schoolYear       String
  Semester         String
  track            String
  strand           String
  zipCode          Int
  barangay         String
  cityMunicipality String
  province         String
  

  student         Student @relation(fields: [id], references: [id])


}